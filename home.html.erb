<div class="big-home">

  <div class="border-rouge"></div>

  <div>
    <h1>Welcome to "<%= Rails.app_class.module_parent_name %>"</h1>
    <p>pages#home</p>
  </div>

  <div class="clock" data-controller="clock"
   data-content-loader-refresh-interval-value="1000">
    <div class="clock-face">
      <div class="hand" data-clock-target="hour"></div>
      <div class="hand" data-clock-target="min"></div>
      <div class="hand" data-clock-target="second"></div>
    </div>
  </div>

  <div>
    <h1>Your New Rails App is ready</h1>
    <p>Rails <%= Rails.version %> - Ruby <%= RUBY_VERSION %></p>
  </div>

  <div class="border-rouge"></div>

  <div class="work-on"><p>Hello World !</p></div>

</div>
